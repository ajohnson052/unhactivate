<!DOCTYPE html>
<html>
<head>
  <title>Unhactivate</title>
  <script src="https://code.jquery.com/jquery-1.12.0.min.js"></script>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <header>

    <!-- <h1>Unhactivate</h1> -->

    <nav class="navbar navbar-default navbar-fixed-top">
      <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <%= link_to image_tag("logo.png"), root_path, class: "navbar-brand" %>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav">
            <%= nav_li "Breaches", breaches_path %>
            <%= nav_li "Educate", articles_path %>
          </ul>
          <% if current_user %>
            <ul class="nav navbar-nav navbar-right logged-in-bar">
              <li>
                <%= link_to user_path(current_user) do %>
                  <span title="account" class="glyphicon glyphicon-user" aria-hidden="true"></span>
                  <!-- <%= current_user.email %> -->
                <% end %>
              </li>
              <li>
                <%= link_to destroy_user_session_path, method: :delete do %>
                  <span title="log out" class="glyphicon glyphicon-log-out" aria-hidden="true" aria-label="log out"></span>
                <% end %>
              </li>
            </ul>
          <% else %>
            <%= form_for(:user, url: session_path(:user), html: {class: "navbar-form navbar-right"}) do |f| %>
              <%= f.text_field :email, placeholder: "Email"%>
              <%= f.password_field :password, placeholder: "Password" %>
              <%= f.submit 'Log in', class: "btn btn-default" %></br>
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
              <!-- <%= link_to "Forgot your password?", new_password_path(:user) %> -->
            <% end %>
          <% end %>
        </div><!-- /.navbar-collapse -->
      </div><!-- /.container-fluid -->
    </nav>

    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

  </header>
  <main class="container">
    <%= yield %>
  </main>
  <footer class="navbar navbar-default navbar-fixed-bottom">
    <div class="container-fluid">
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "About Us", about_path %></li>
        <li><%= link_to "Support", support_path %></li>
        <li><%= link_to "Legal", legal_path %></li>
      </ul>
    </div>
  </footer>

</body>
</html>
